<% layout('layout') %>
<h2><%= item.name %></h2>
<div class="product-card" style="max-width:400px; margin:0 auto;">
    <div class="product-thumb">
        <% if (item.image) { %>
            <img src="<%= item.image %>" alt="<%= item.name %>" />
        <% } else { %>
            <span class="no-image">이미지 없음</span>
        <% } %>
    </div>
    <div class="product-info">
        <h3><%= item.name %></h3>
        <div style="color:#007bff; font-weight:500; margin:0.3em 0 0.5em 0; font-size:1.05rem;"><%= item.price %>원</div>
        <div style="color:#888; font-size:0.97rem; min-height:2.2em;"><%= item.description %></div>
        <div style="font-size:0.97rem; color:#666; margin-bottom:0.3em;">카테고리: <%= item.category || '-' %></div>
        <div style="font-size:0.97rem; color:#666; margin-bottom:0.3em;">재고: <%= item.stock %>개</div>
        <form action="/cart/add" method="POST" class="add-cart-form">
            <input type="hidden" name="productId" value="<%= item._id %>" />
            <button type="submit">장바구니 담기</button>
        </form>
        <% if (user && user.isAdmin) { %>
            <a href="/item/admin/edit/<%= item._id %>" class="admin-btn" style="margin-top:0.5rem;">수정</a>
            <form action="/item/admin/delete/<%= item._id %>" method="POST" style="display:inline;">
                <button type="submit" style="background:#d32f2f; margin-top:0.5rem;">삭제</button>
            </form>
        <% } %>
    </div>
</div> 